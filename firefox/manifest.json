{
  "manifest_version": 2,
  "name": "UBBox PDF Download",
  "version": "1.0",

  "description": "Allows you to download PDFs from UB Box.",
  "permissions": [
      "webRequest",
      "*://buffalo.app.box.com/v/*",
      "*://dl.boxcloud.com/api/2.0/internal_files/*/pdf/content/*"
  ],

  "icons": {
    "48": "icon48.png",
    "64": "icon64.png"
  },

  "background": {
    "scripts": ["ubbox.js"]
  }
}
